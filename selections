$(document).ready(function() {
    $('#type').bind('change', function() {
        var elements = $('div.step2').children().hide(); // hide all the elements
        var value = $(this).val();

        if (value.length) { // if somethings' selected
            elements.filter('.' + value).show(); // show the ones we want
        }
    }).trigger('change');
    
    $('#language').bind('change', function() {
        var elements = $('div.step2').children().hide(); // hide all the elements
        var value = $(this).val();

        if (value.length) { // if somethings' selected
            elements.filter('.' + value).show(); // show the ones we want
        }
    }).trigger('change');
});


.container{
     overflow: hidden;
}
.container > div{
     float: left;

}
